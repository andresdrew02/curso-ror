<%= form_with model: @product do | form | %>
  <div>
    <% @product.errors.full_messages.each do | error| %>
       <ul>
         <li class="error"><%= error %></li>
       </ul>
    <% end %>
  </div>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>
  <%= form.submit %>
<%end %>